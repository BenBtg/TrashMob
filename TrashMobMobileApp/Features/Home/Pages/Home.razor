@page "/"

<ErrorBoundary>
    <ChildContent>
        <MudContainer Style="height: 100%; margin-top: 10%">
            <MudText Typo="Typo.h4">Welcome to TrashMob</MudText>
            <MudText Typo="Typo.h5">Meet up. Clean up. Feel good.</MudText>
            <MudCard>
                <MudCardContent>
                    <MudCarousel Style="height:200px;" ShowBullets=false EnableSwipeGesture AutoCycle TData="object">
                        <MudCarouselItem Transition="Transition.Slide" Color="@Color.Primary">
                            <MudImage Src="images/trashmob-banner.png" Height="200" ObjectFit="ObjectFit.ScaleDown"  />
                        </MudCarouselItem>
                        <MudCarouselItem Transition="Transition.Slide" Color="@Color.Primary">
                            <MudImage Src="images/trashmob-bags.png" Height="200" ObjectFit="ObjectFit.ScaleDown" />
                        </MudCarouselItem>
                    </MudCarousel>
                </MudCardContent>
                <MudCardActions>
                    <MudLink Href="https://www.trashmob.eco/aboutus" Color="Color.Primary" Underline="Underline.Always">Learn More</MudLink>
                </MudCardActions>
            </MudCard>
            <MudStack Style="width: 100%; margin-top: 10%">
                <MudStack Style="margin-bottom: 10px; width: 100%" Row Justify="Justify.Center">
                    <MudFab StartIcon="@Icons.Material.Filled.Event" Color="Color.Primary" Label="Events" OnClick="() => Navigator.NavigateTo(Routes.Events)" />
                </MudStack>
                <MudStack Style="margin-bottom: 10px; width: 100%" Row Justify="Justify.Center">
                    <MudFab StartIcon="@Icons.Material.Filled.Add" Color="Color.Primary" Label="Create Event" OnClick="() => Navigator.NavigateTo(Routes.CreateEvent)" />
                </MudStack>
                <MudStack Style="margin-bottom: 10px; width: 100%" Row Justify="Justify.Center">
                    <MudFab StartIcon="@Icons.Material.Filled.Person" Color="Color.Primary" Label="My Location Preference" OnClick="() => OnUserLocationPreference_Click()" />
                </MudStack>
            </MudStack>

        </MudContainer>
    </ChildContent>
    <ErrorContent>
        @context.Message
    </ErrorContent>
</ErrorBoundary>
