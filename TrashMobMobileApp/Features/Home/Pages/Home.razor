@page "/"

<ErrorBoundary>
    <ChildContent>
        <MudContainer Style="height: 100%; margin-top: 5%">
            <MudCard Style="margin: 5%">
                <MudCardContent>
                    <MudImage Src="images/meetup.png" Height="250" ObjectFit="ObjectFit.Fill" ObjectPosition="ObjectPosition.Center"  />
                </MudCardContent>
                <MudCardActions>
                    <MudLink Href="https://www.trashmob.eco/aboutus" Color="Color.Primary" Underline="Underline.Always">Learn More</MudLink>
                </MudCardActions>
            </MudCard>
            <MudStack Style="width: 100%; margin-top: 10%">
                <MudStack Style="margin-bottom: 10px; width: 100%" Row Justify="Justify.Center">
                    <MudFab StartIcon="@Icons.Material.Filled.Event" Color="Color.Primary" Label="Events" OnClick="() => Navigator.NavigateTo(Routes.Events)" />
                </MudStack>
                <MudStack Style="margin-bottom: 10px; width: 100%" Row Justify="Justify.Center">
                    <MudFab StartIcon="@Icons.Material.Filled.Add" Color="Color.Primary" Label="Create Event" OnClick="() => Navigator.NavigateTo(Routes.CreateEvent)" />
                </MudStack>
                <MudStack Style="margin-bottom: 10px; width: 100%" Row Justify="Justify.Center">
                    <MudFab StartIcon="@Icons.Material.Filled.Person" Color="Color.Primary" Label="Set Location Preference" OnClick="() => OnUserLocationPreference_Click()" />
                </MudStack>
            </MudStack>
        </MudContainer>
    </ChildContent>
    <ErrorContent>
        @context.Message
    </ErrorContent>
</ErrorBoundary>
