@page "/contactus"
@using System.ComponentModel.DataAnnotations

@*TODO: move to styles sheet*@
<style>
    .tm-contact-container {
        height: 100%;
        padding: 20px;
    }

        .tm-contact-container .tm-back-btn-container {
            margin-bottom: 10px;
        }

        .tm-contact-container .tm-contact-submit-btn {
            position: fixed;
            bottom: 10px;
            right: 10px;
        }
</style>

<ErrorBoundary>
    <ChildContent>
        <MudContainer Class="tm-contact-container">
            <MudOverlay @bind-Visible="_isLoading" Absolute>
                <MudProgressCircular Color="Color.Default" Indeterminate Class="tm-loader" />
            </MudOverlay>
            <MudStack Class="tm-back-btn-container" Row AlignItems="AlignItems.Start">
                <MudFab StartIcon="@Icons.Material.Filled.ArrowLeft" Color="Color.Primary" IconSize="Size.Small" Size="Size.Small" Label="Home" OnClick="() => Navigator.NavigateTo(Routes.Home)" />
            </MudStack>
            @if (_hasSubmitted)
            {
                <MudAlert Severity="Severity.Success">Submitted! Someone will contact you soon.</MudAlert>
            }
            else
            {
                <MudForm @ref="_contactForm" @bind-IsValid="@_success" @bind-Errors="@_errors">
                    <MudTextField FullWidth T="string" Label="Name" Required RequiredError="Name is required" />
                    <MudTextField FullWidth T="string" Label="Email" Required RequiredError="Email is required"
                              Validation="@(new EmailAddressAttribute() { ErrorMessage = "The email address is invalid"} )" />
                    <MudTextField FullWidth T="string" Label="Message" Required RequiredError="Message is required" />
                    <MudButton Class="tm-contact-submit-btn" Variant="Variant.Filled" Color="Color.Primary" OnClick="OnSubmitAsync">Submit</MudButton>
                </MudForm>
            }
        </MudContainer>
    </ChildContent>
    <ErrorContent>
        @context.Message
    </ErrorContent>
</ErrorBoundary>