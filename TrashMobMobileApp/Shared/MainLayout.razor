@inherits LayoutComponentBase

<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudContainer Style="width: 100%; text-align: center;">
            @_pageTitle
        </MudContainer>
        <MudSpacer />
        <MudMenu Color="Color.Primary">
            <ActivatorContent>
                <MudAvatar Color="Color.Dark">@_userInitials</MudAvatar>
            </ActivatorContent>
            <ChildContent>
                <MudMenuItem>Profile</MudMenuItem>
                <MudMenuItem OnClick="@OnSignOutAsync">Sign Out</MudMenuItem>
            </ChildContent>
        </MudMenu>
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen">
        <NavMenu/>
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

<MudThemeProvider Theme="@_theme" />
<MudDialogProvider />
<MudSnackbarProvider />